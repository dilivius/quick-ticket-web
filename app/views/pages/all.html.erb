<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h3>All Tickets</h3>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Hours</th>
            <th>Customer</th>
            <th>Employee</th>
            <th>Status</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <tbody>
          <% @tickets.each do |ticket| %>
            <tr>
              <td><%= link_to ticket.title, ticket %></td>
              <td><%= ticket.hours %></td>
              <td><%= ticket.customer %></td>
              <td><%= ticket.user.email %></td>
              <td><%= ticket.ticket_status %></td>
              <td><%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_ticket_path(ticket) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<hr>

<div class="digg_pagination">
  <%= will_paginate @tickets, :container => false %>
</div>

<hr>

<div class="form-group">
  <%= link_to "New Ticket", new_ticket_path, class: 'btn btn-success btn-block' %>
</div>