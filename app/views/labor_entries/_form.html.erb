<div class="row">
  <div class="col-md-1 column"></div>

  <div class="col-md-10 column">
    <%= form_for(@labor_entry) do |f| %>
      <% if @labor_entry.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <p><%= pluralize(@labor_entry.errors.count, "error") %> prohibited this labor_entry from being saved:</p>

          <ul>
          <% @labor_entry.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="control-group">
        <%= f.label :user_id, class: 'control-label' %>
        <div class="controls">
          <%= collection_select(:labor_entry, :user_id, User.all, :id, :email, {include_blank: true}, { :multiple => false, class: 'form-control' } ) %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :hours %><br>
        <%= f.text_field :hours, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= hidden_field_tag :ticket_id, params[:ticket_id].to_i %>
        <%= f.submit "Add Hours", class: 'btn btn-success btn-block', data: { disable_with: "Adding Hours to Ticket..." } %>
      </div>
    <% end %>
  </div>

  <div class="col-md-1 column"></div>
</div>