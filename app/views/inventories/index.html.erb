<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h3>Inventory</h3>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Quantity</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @inventory_items.each do |inventory| %>
            <tr>
              <td><%= inventory.title %></td>
              <td><%= inventory.qty %></td>
              <td><%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_inventory_path(inventory) %></td>
              <td><%= link_to '<i class="fa fa-times"></i>'.html_safe, inventory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <hr>

  <%= link_to 'Add a New Inventory Item', new_inventory_path, class: "btn btn-primary btn-block" %>

  <hr>

  <div class="digg_pagination">
    <%= will_paginate @inventory_items, :container => false %>
  </div>
</div>

